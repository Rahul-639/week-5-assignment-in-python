def minReversals(s: str) -> int:
    n = len(s)
    if n % 2 == 1:
        return -1  
    for ch in s:
        if ch == '{':
            stack.append(ch)
        else:  # '}'
            if stack and stack[-1] == '{':
                stack.pop()
            else:
                stack.append(ch)
    open_count = stack.count('{')
    close_count = len(stack) - open_count

    return (open_count + 1)
